{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "comma-dangle": ["error", "always-multiline"],
        "quotes": ["error", "double"],
        "semi": ["error", "always"],
        "indent": ["error", 4]
    }
}
